<% if @user%>
	<h2>Your Profile</h2>
	<div class = 'user_info'>
		<ul>
			<li>Name: <%= @user.name%></li>
			<li>Id: <%= @user.id%></li>
			<li>Email: <%= @user.email%></li>
			<li>Address: <%= @user.address%></li>
			<li>City: <%= @user.city%></li>
			<li>State: <%= @user.state%></li>
			<li>Zip Code: <%= @user.zip%></li>
			<li>Phone Number: <%= @user.phone%></li>
		</ul>
	</div>
<% end %>