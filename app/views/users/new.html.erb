<%=form_for(@user) do |f| %>

  <div class="field form-errors">
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h4><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h4>

        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>

      </div>
  <% end %>
  </div>

	<div class="field form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name%><br>
  </div>

  <div class="field form-group">
  	<%= f.label :email %><br>
  	<%= f.email_field :email, placeholder: "Email"%><br>
	</div>

	<div class="field form-group">
  	<%= f.label :password %><br>
  	<%= f.password_field :password, placeholder: "Password"%><br>
	</div>

	<div class="field form-group">
  	<%= f.label :password_confirmation %><br>
  	<%= f.password_field :password_confirmation, placeholder: "Password confirmation"%><br>
	</div>

  <hr>

  <div class="field form-group">
   <p><span id="helpBlock" class="help-block">Are you a business or charity?</p>
    <%= f.label :business %>
     <%= radio_button_tag 'organization', 'business'%>
     <%= f.label :charity %>
     <%= radio_button_tag 'organization', 'charity'%>
   </span>
  </div>

	<div class="field form-group">
  	<%= f.label :phone %><br>
  	<%= f.telephone_field :phone%><br>
	</div>

	<div class="field form-group">
  	<%= f.label :address %><br>
  	<%= f.text_field :address%><br>
	</div>

	<div class="field form-group">
  	<%= f.label :city %><br>
  	<%= f.text_field :city%><br>
	</div>

	<div class="field form-group">
  	<%= f.label :state %><br>
  	<%= f.text_field :state%><br>
	</div>

	<div class="field form-grou">
  	<%= f.label :zip %><br>
  	<%= f.text_field :zip%><br>
	</div>

  <hr>

	<div class="actions">
  	<%= f.submit "Sign Up", :class => "btn btn-default"%>
	</div>

  <span id="helpBlock" class="help-block">
    Already have an account?
    <%= link_to 'login', login_path, :class => "btn btn-default" %>
  </span>

<% end %>
