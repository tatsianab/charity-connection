<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>


<%=form_tag post_login_path do %>

  	<div class="field">
    	<%= label_tag :email %><br>
    	<%= email_field_tag :email %><br>
  	</div>
  	<div class="field">
    	<%= label_tag :password %><br>
    	<%= password_field_tag :password %><br>
  	</div>
    <hr>
    <div class="actions">
      <%= submit_tag "Sign In"%>
    </div>
<% end %>